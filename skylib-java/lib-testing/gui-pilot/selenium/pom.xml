<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.scaille</groupId>
        <artifactId>gui-pilot</artifactId>
        <version>${revision}</version>
    </parent>
    <artifactId>gui-pilot-selenium</artifactId>
    <properties>
        <geckodriver.version>0.33.0</geckodriver.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>ch.scaille</groupId>
            <artifactId>gui-pilot-core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
        </dependency>

    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>com.github.webdriverextensions</groupId>
                <artifactId>webdriverextensions-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>install-drivers</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                <installationDirectory>${user.home}/selenium/webdrivers
                </installationDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>

        <profile>
            <id>linux</id>
            <activation>
                <os><family>unix</family></os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.webdriverextensions</groupId>
                        <artifactId>webdriverextensions-maven-plugin</artifactId>
                        <configuration>
                            <drivers>
                                <driver>
                                    <name>geckodriver</name>
                                    <platform>linux</platform>
                                    <bit>64</bit>
                                    <version>${geckodriver.version}</version>
                                    <url>
                                        https://github.com/mozilla/geckodriver/releases/download/v${geckodriver.version}/geckodriver-v${geckodriver.version}-linux64.tar.gz
                                    </url>

                                </driver>
                            </drivers>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os><family>windows</family></os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.webdriverextensions</groupId>
                        <artifactId>webdriverextensions-maven-plugin</artifactId>
                        <configuration>
                            <drivers>
                                <driver>
                                    <name>geckodriver</name>
                                    <platform>windows</platform>
                                    <bit>64</bit>
                                    <version>${geckodriver.version}</version>
                                    <url>
                                        https://github.com/mozilla/geckodriver/releases/download/v${geckodriver.version}/geckodriver-v${geckodriver.version}-win64.zip
                                    </url>
                                </driver>
                            </drivers>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>