<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.scaille.tcwriter</groupId>
		<artifactId>testcase-writer-webapp-api-v0</artifactId>
		<version>${revision}</version>
	</parent>
	<!-- required to allow package scanning -->
	<packaging>jar</packaging>
	<artifactId>testcase-writer-webapp-api-v0-backend</artifactId>

	<dependencies>
		<dependency>
			<groupId>ch.scaille.tcwriter</groupId>
			<artifactId>testcase-writer-webapp-backend-core</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.scaille.tcwriter</groupId>
			<artifactId>testcase-writer-webapp-api-v0-webapi</artifactId>
			<version>${revision}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>gen-openapi-stubs</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<templateDirectory>
								${project.basedir}/../openapi/templates
							</templateDirectory>
							<inputSpec>
								${inputSpec}</inputSpec>
							<apiPackage>
								${apiPackageBase}.${javaApiVersion}</apiPackage>
							<modelPackage>
								${modelPackageBase}.${javaApiVersion}</modelPackage>
							<configOptions>
								<configPackage>
									${configPackageBase}.${javaApiVersion}</configPackage>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<annotationProcessorPaths>
						<path>
							<groupId>org.mapstruct</groupId>
							<artifactId>mapstruct-processor</artifactId>
							<version>${mapstruct.version}</version>
						</path>
					</annotationProcessorPaths>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
