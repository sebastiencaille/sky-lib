<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ch.scaille.tcwriter</groupId>
		<artifactId>testcase-writer</artifactId>
		<version>${revision}</version>
	</parent>

	<artifactId>testcase-writer-webapp</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>webapi</module>
		<module>backend</module>
		<module>frontend</module>
		<module>war</module>
	</modules>

	<properties>
		<sonar.exclusions>**/generated-sources/**</sonar.exclusions>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>ch.scaille.tcwriter</groupId>
				<artifactId>testcase-writer-webapp-webapi</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>ch.scaille.tcwriter</groupId>
				<artifactId>testcase-writer-webapp-backend</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>ch.scaille.tcwriter</groupId>
				<artifactId>testcase-writer-webapp-frontend</artifactId>
				<version>${revision}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>


	<profiles>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<family>unix</family>
				</os>
			</activation>
			<properties>
				<npm.cmd>npm</npm.cmd>
				<npx.cmd>npx</npx.cmd>
			</properties>
		</profile>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<npm.cmd>npm.cmd</npm.cmd>
				<npx.cmd>npx.cmd</npx.cmd>
			</properties>
		</profile>
	</profiles>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.openapitools</groupId>
					<artifactId>openapi-generator-maven-plugin</artifactId>
					<configuration>
						<inputSpec>
							${project.basedir}/../webapi/src/main/resources/webapi/openapi.yaml</inputSpec>
						<configOptions>
							<sourceFolder>src/gen/java/main</sourceFolder>
							<useJakartaEe>true</useJakartaEe>
						</configOptions>
						<apiPackage>
							ch.scaille.tcwriter.generated.api.controllers</apiPackage>
						<modelPackage>ch.scaille.tcwriter.generated.api.model</modelPackage>
						<generatorName>spring</generatorName>
						<library>spring-boot</library>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
