<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ch.scaille.tcwriter</groupId>
		<artifactId>testcase-writer</artifactId>
		<version>${revision}</version>
	</parent>

	<artifactId>testcase-writer-webapp</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>webapi</module>
		<module>server</module>
	</modules>

	<properties>
		<version.springboot>3.1.0</version.springboot>
		<version.jackson-databind-nullable>0.2.6</version.jackson-databind-nullable>
		<version.mapstruct>1.5.5.Final</version.mapstruct>
		<version.swagger-parser>2.1.15</version.swagger-parser>
		<version.swagger>2.2.12</version.swagger>

		<sonar.exclusions>**/generated-sources/**</sonar.exclusions>
	</properties>


	<profiles>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<family>unix</family>
				</os>
			</activation>
			<properties>
				<npm.cmd>npm</npm.cmd>
				<npx.cmd>npx</npx.cmd>
			</properties>
		</profile>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<npm.cmd>npm.cmd</npm.cmd>
				<npx.cmd>npx.cmd</npx.cmd>
			</properties>
		</profile>
	</profiles>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-starter-parent</artifactId>
				<version>${version.springboot}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>ch.scaille.tcwriter</groupId>
				<artifactId>testcase-writer-webapp-webapi</artifactId>
				<version>${revision}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.openapitools</groupId>
					<artifactId>openapi-generator-maven-plugin</artifactId>
					<version>6.6.0</version>
					<configuration>
						<inputSpec>${project.basedir}/../webapi/src/main/resources/webapi/openapi.yaml</inputSpec>
						<configOptions>
							<sourceFolder>src/gen/java/main</sourceFolder>
		                    <useJakartaEe>true</useJakartaEe>
						</configOptions>
						<apiPackage>ch.scaille.tcwriter.generated.api.controllers</apiPackage>
						<modelPackage>ch.scaille.tcwriter.generated.api.model</modelPackage>
						<generatorName>spring</generatorName>
						<library>spring-boot</library>
						<generateAliasModel>true</generateAliasModel>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>io.swagger.parser.v3</groupId>
							<artifactId>swagger-parser</artifactId>
							<version>${version.swagger-parser}</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
