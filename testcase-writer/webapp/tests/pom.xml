<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.scaille.tcwriter</groupId>
		<artifactId>testcase-writer-webapp</artifactId>
		<version>${revision}</version>
	</parent>
	<!-- allows to start the war as a local application -->
	<packaging>war</packaging>
	<artifactId>testcase-writer-webapp-tests</artifactId>

	<dependencies>
		<dependency>
			<groupId>ch.scaille.tcwriter</groupId>
			<artifactId>testcase-writer-webapp-war</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>ch.scaille</groupId>
			<artifactId>gui-pilot-selenium</artifactId>
		</dependency>

		<!-- https://mvnrepository.com/artifact/javax.servlet/javax.servlet-api -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
		</dependency>
		<dependency>
			<groupId>ch.scaille.tcwriter</groupId>
			<artifactId>testcase-writer-examples</artifactId>
		</dependency>
	</dependencies>

	<profiles>

		<profile>
			<id>it</id>
			<activation>
				<property>
					<name>it</name>
					<value>!false</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>setup-test-env</id>
								<goals>
									<goal>java</goal>
								</goals>
								<phase>pre-integration-test</phase>
								<configuration>
									<mainClass>
										ch.scaille.tcwriter.server.bootstrap.ExampleBootstrap
									</mainClass>
								</configuration>
							</execution>
							<execution>
								<id>shutdown-server</id>
								<goals><goal>exec</goal></goals>
								<phase>post-integration-test</phase>
								<configuration>
									<executable>curl</executable>
									<arguments>
										<argument>-X</argument>
										<argument>POST</argument>
										<argument>http://localhost:9000/actuator/shutdown</argument>
									</arguments>
								</configuration>
							</execution>
							
						</executions>
					</plugin>
					<plugin>
						<groupId>org.springframework.boot</groupId>
						<artifactId>spring-boot-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>repackage</id>
								<phase>none</phase>
							</execution>
							<execution>
								<id>pre-integration-test</id>
								<goals>
									<goal>start</goal>
								</goals>
							</execution>
							<execution>
								<id>post-integration-test</id>
								<goals>
									<goal>stop</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<classesDirectory>
								${project.build.directory}/${project.build.finalName}/WEB-INF/classes</classesDirectory>
							<directories>
								<directory>
									${project.build.directory}/${project.build.finalName}/WEB-INF/lib/*</directory>
								<directory>
									${project.build.directory}/${project.build.finalName}/</directory>
							</directories>
							<mainClass>ch.scaille.tcwriter.server.Server</mainClass>
							<arguments>
								<argument>--server.port=9000</argument>
							</arguments>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-failsafe-plugin</artifactId>
					</plugin>
				</plugins>
			</build>

		</profile>

	</profiles>

</project>
