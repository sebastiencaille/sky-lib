<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>ch.scaille.tcwriter</groupId>
		<artifactId>testcase-writer-webapp</artifactId>
		<version>${revision}</version>
	</parent>
	<artifactId>testcase-writer-webapp-war</artifactId>
	<packaging>war</packaging>
	<properties>
		<!-- automatically run annotation processors within the incremental
		compilation -->
		<m2e.apt.activation>jdt_apt</m2e.apt.activation>
	</properties>
	<dependencies>
		<!-- included as jar for aot -->
		<dependency>
			<groupId>ch.scaille.tcwriter</groupId>
			<artifactId>testcase-writer-webapp-backend</artifactId>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>ch.scaille.tcwriter</groupId>
			<artifactId>testcase-writer-webapp-frontend</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-actuator</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals><goal>process-aot</goal></goals>
					</execution>
					<execution>
						<id>repackage</id>
					</execution>
				</executions>
				<configuration>
					<mainClass>ch.scaille.tcwriter.server.Server</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
